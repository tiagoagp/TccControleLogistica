@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin - Login</title>
    <!-- Custom fonts for this template-->
    <link href="~/ArquivosProjeto/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/ArquivosProjeto/css/sb-admin.css" rel="stylesheet">
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <form action="@Url.Action("Autenticar", "Login")" method="post">
                    <input type="hidden" name="redirectUrl" value="@ViewBag.ReturnUrl" />

                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="email" name="usuario" id="inputEmail" class="form-control" placeholder="Usuário" required="required" autofocus="autofocus">
                            <label for="inputEmail">Usuário</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" name="senha" id="inputPassword" class="form-control" placeholder="Senha" required="required">
                            <label for="inputPassword">Senha</label>
                        </div>
                    </div>
                    
                    <input type="submit" class="btn btn-primary btn-block" value="Login" />

                    @if (ViewBag.MensagemErro != "")
                    {
                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert">&times;</a>
                            <h6>@ViewBag.MensagemErro</h6>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/ArquivosProjeto/vendor/jquery/jquery.min.js"></script>
    <script src="~/ArquivosProjeto/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/ArquivosProjeto/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>
</html>
